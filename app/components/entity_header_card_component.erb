<div class="max-w-5xl mx-auto mb-6">

  <!-- Back link -->
  <div class="mb-6">
    <%= link_to @back_path, class: "inline-flex items-center text-gray-600 hover:text-gray-800 transition-colors" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back
    <% end %>
  </div>

  <!-- Main card -->
  <div class="bg-white rounded-3xl shadow-lg p-8">
    <div class="flex items-center mb-6">
      <% if @icon_svg %>
        <div class="<%= @icon_wrapper_classes %>">
          <%= @icon_svg.html_safe %>
        </div>
      <% end %>

      <div>
        <h1 class="text-4xl font-bold text-gray-800 mb-3"><%= @entity.name %></h1>

        <% if @tags.any? %>
          <div class="flex gap-2">
            <% @tags.each do |tag| %>
              <span class="px-4 py-1.5 <%= tag[:color] %> rounded-full text-sm font-medium"><%= tag[:label] %></span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <% if @edit_path || @delete_path %>
      <div class="grid grid-cols-2 gap-4">
        <% if @edit_path %>
          <%= link_to @edit_path, class: "flex items-center justify-center px-6 py-3 bg-purple-200 text-purple-700 rounded-xl font-medium hover:bg-purple-300 transition-colors" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            Edit
          <% end %>
        <% end %>

        <% if @delete_path %>
          <%= link_to @delete_path, method: :delete, data: { turbo_method: :delete, confirm: "Are you sure?" }, class: "flex items-center justify-center px-6 py-3 bg-red-100 text-red-600 rounded-xl font-medium hover:bg-red-200 transition-colors" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
            Delete
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
