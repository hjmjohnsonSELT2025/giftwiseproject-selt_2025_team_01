<%= link_to recipient_path(@recipient), class: "block bg-white rounded-3xl shadow-md hover:shadow-lg transition-shadow duration-200 p-5" do %>
  <div class="flex items-center gap-4">
    <%= render 'shared/icon', name: 'gift', size: 32, color: 'text-white', bg_color: @bg_color %>
    <div class="flex-1">
      <h3 class="text-lg font-medium text-gray-800"><%= @recipient.name %></h3>
      <p class="text-gray-500 text-sm mt-1">Click to view gift ideas</p>
    </div>
    <svg class="w-5 h-5 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 18l6-6-6-6"></path>
    </svg>
  </div>
<% end %>
