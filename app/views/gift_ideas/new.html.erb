<h1 class="text-center text-2xl font-bold text-gray-700 mb-6">Add Gift Idea for <%= @recipient.name %></h1>

<div class="max-w-2xl mx-auto">
  <%= render "form", gift_idea: @gift_idea, submit_label: "Save Gift Idea" %>

  <div class="mt-6 flex justify-center">
    <%= link_to "Back to Recipient", recipient_path(@recipient),
                class: "px-4 py-2 text-indigo-700 border border-indigo-300 rounded-xl hover:bg-indigo-50 transition-all duration-200 font-medium" %>
  </div>
</div>
