<%= form_with model: @recipient, local: true, class: "space-y-4" do |f| %>
  <% if @recipient.errors.any? %>
    <div class="text-red-600">
      <h2><%= pluralize(@recipient.errors.count, "error") %> prevented saving:</h2>
      <ul>
        <% @recipient.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% [:name, :age, :relationship, :hobbies, :dislikes].each do |field| %>
    <div>
      <%= f.label field, class: "block font-medium mb-1" %>
      <%= f.text_field field, class: "w-full border rounded px-3 py-2" %>
    </div>
  <% end %>

  <div>
    <%= f.submit class: "px-6 py-3 bg-gradient-to-r from-pink-400 to-pink-500 text-white rounded-xl font-medium hover:shadow-lg transition-all" %>
  </div>
<% end %>
