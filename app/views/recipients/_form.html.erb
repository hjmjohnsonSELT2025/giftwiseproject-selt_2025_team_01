<!-- Form Container Card -->
<div class="max-w-3xl mx-auto">
  <div class="bg-white rounded-2xl shadow-md p-8">
    <%= form_with model: @recipient, local: true, class: "space-y-6" do |f| %>

      <!-- Error Messages -->
      <% if @recipient.errors.any? %>
        <div class="bg-red-50 border-2 border-red-200 rounded-xl p-4">
          <h3 class="text-lg font-semibold text-red-600 mb-2">
            <%= pluralize(@recipient.errors.count, "error") %> prevented saving:
          </h3>
          <ul class="list-disc list-inside text-red-600 space-y-1">
            <% @recipient.errors.full_messages.each do |msg| %>
              <li class="text-sm"><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Name Field -->
      <div class="space-y-2">
        <%= f.label :name, "Name", class: "block text-base font-medium text-gray-700" %>
        <%= f.text_field :name,
            placeholder: "Enter name here...",
            class: "w-full bg-input-background border-2 border-[#F9DCDD] rounded-xl px-4 py-3 text-base focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200" %>
      </div>

      <!-- Age Field -->
      <div class="space-y-2">
        <%= f.label :age, "Age", class: "block text-base font-medium text-gray-700" %>
        <%= f.text_field :age,
            placeholder: "Enter age...",
            class: "w-full bg-input-background border-2 border-[#F9DCDD] rounded-xl px-4 py-3 text-base focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200" %>
      </div>

      <!-- Relationship Field -->
      <div class="space-y-2">
        <%= f.label :relationship, "Relationship", class: "block text-base font-medium text-gray-700" %>
        <%= f.text_field :relationship,
            placeholder: "e.g., Friend, Sister, Cousin...",
            class: "w-full bg-input-background border-2 border-[#F9DCDD] rounded-xl px-4 py-3 text-base focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200" %>
      </div>

      <!-- Hobbies Field (Textarea) -->
      <div class="space-y-2">
        <%= f.label :hobbies, "Hobbies & Interests", class: "block text-base font-medium text-gray-700" %>
        <%= f.text_area :hobbies,
            placeholder: "Enter hobbies and interests...",
            rows: 4,
            class: "w-full bg-input-background border-2 border-[#F9DCDD] rounded-xl px-4 py-3 text-base focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200 resize-none" %>
      </div>

      <!-- Dislikes Field (Textarea) -->
      <div class="space-y-2">
        <%= f.label :dislikes, "Dislikes", class: "block text-base font-medium text-gray-700" %>
        <%= f.text_area :dislikes,
            placeholder: "Enter things they dislike...",
            rows: 4,
            class: "w-full bg-input-background border-2 border-[#F9DCDD] rounded-xl px-4 py-3 text-base focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200 resize-none" %>
      </div>

      <!-- Action Buttons -->
      <div class="pt-4">
        <div class="flex gap-4">
          <div class="flex-1">
            <%= render 'shared/muted_button',
                       label: 'Cancel',
                       path: @recipient.persisted? ? recipient_path(@recipient) : recipients_path,
                       full_width: true %>
          </div>
          <div class="flex-1">
            <%= render 'shared/primary_action_button',
                       label: 'Save Recipient',
                       path: '',
                       method: nil,
                       full_width: true %>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>
