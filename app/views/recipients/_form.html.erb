<%= form_with model: @recipient, local: true,
              class: "space-y-6 bg-white p-8 rounded-3xl shadow-md" do |f| %>

  <% if @recipient.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 p-4 rounded-xl">
      <h2 class="font-semibold mb-2">
        <%= pluralize(@recipient.errors.count, "error") %> prevented saving:
      </h2>
      <ul class="list-disc ml-5 space-y-1">
        <% @recipient.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% [:name, :age, :relationship, :hobbies, :dislikes].each do |field| %>
    <div class="space-y-1">
      <%= f.label field, class: "block font-medium text-gray-700" %>
      <%= f.text_field field,
                       class: "w-full rounded-xl border-gray-300 focus:border-pink-400 focus:ring-pink-400 px-4 py-3 shadow-sm" %>
    </div>
  <% end %>

  <div class="pt-2">
    <%= f.submit "Save Recipient",
                 class: "w-full py-3 bg-gradient-to-r from-pink-400 to-pink-500 text-white rounded-xl font-semibold shadow hover:shadow-lg transition-all" %>
  </div>
<% end %>
