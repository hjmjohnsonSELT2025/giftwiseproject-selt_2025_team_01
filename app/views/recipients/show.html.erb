<%= render EntityHeaderCardComponent.new(
  entity: @recipient,
  back_path: recipients_path,
  icon_svg: '<svg class="text-white w-28 h-28 bg-gradient-to-br from-purple-400 to-indigo-500 rounded-3xl flex items-center justify-center mr-6 shadow-lg" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7" />',
  tags: [
    { label: "#{@recipient.age} years old", color: "bg-pink-100 text-pink-700" },
    { label: @recipient.relationship, color: "bg-purple-100 text-purple-700" }
  ],
  edit_path: edit_recipient_path(@recipient),
  delete_path: recipient_path(@recipient)
) %>

<!-- Hobbies / Dislikes Section (i deleted the old 'Likes' section) -->
<div class="max-w-5xl mx-auto px-4">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <div class="flex justify-center items-center">
      <div class="w-full md:min-w-[250px]">
        <%= render "recipients/attribute_card", title: "Hobbies", icon_color: "pink", content: @recipient.hobbies %>
      </div>
    </div>

    <div class="flex justify-center items-center">
      <div class="w-full md:min-w-[250px]">
        <%= render "recipients/attribute_card", title: "Dislikes", icon_color: "yellow", content: @recipient.dislikes %>
      </div>
    </div>
  </div>
</div>


<!-- Gift Ideas Section -->
<div class="max-w-5xl mx-auto px-4 mb-8">
  <div class="flex items-center justify-between mb-4">
    <!-- Heading + Count -->
    <div class="flex items-center gap-2">
      <h2 class="text-xl font-semibold text-gray-700">Gift Ideas</h2>
      <span class="bg-pink-400 text-white text-sm font-bold rounded-full w-7 h-7 flex items-center justify-center">
        <%= @recipient.gift_ideas.count %>
      </span>
    </div>

    <!-- Add Gift Idea Button -->
    <%= link_to new_recipient_gift_idea_path(@recipient), class: "flex items-center px-6 py-3 bg-gradient-to-r from-pink-400 to-pink-500 text-white rounded-xl font-medium hover:from-pink-500 hover:to-pink-600 transition-all shadow-md" do %>
      Add Gift Idea
    <% end %>
  </div>

  <!-- Gift Ideas Cards Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @recipient.gift_ideas.each do |idea| %>
      <%= render GiftIdeaCardComponent.new(gift_idea: idea, recipient: @recipient) %>
    <% end %>
  </div>
</div>

