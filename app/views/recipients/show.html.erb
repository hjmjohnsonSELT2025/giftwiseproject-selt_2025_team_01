<div class="max-w-5xl mx-auto">
  <!-- Back to Recipients Link -->
  <div class="mb-6">
    <%= link_to recipients_path, class: "inline-flex items-center text-gray-600 hover:text-gray-800 transition-colors" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back to Recipients
    <% end %>
  </div>

  <!-- Recipient Header Card -->
  <div class="bg-white rounded-3xl shadow-lg p-8 mb-6">
    <div class="flex items-center mb-6">
      <!-- Gift Icon Avatar -->
      <div class="w-28 h-28 bg-gradient-to-br from-purple-400 to-indigo-500 rounded-3xl flex items-center justify-center mr-6 shadow-lg">
        <svg class="text-white w-28 h-28 bg-gradient-to-br from-purple-400 to-indigo-500 rounded-3xl flex items-center justify-center mr-6 shadow-lg" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7" />
        </svg>
      </div>

      <!-- Name and Tags -->
      <div>
        <h1 class="text-4xl font-bold text-gray-800 mb-3"><%= @recipient.name %></h1>
        <div class="flex gap-2">
          <span class="px-4 py-1.5 bg-pink-100 text-pink-700 rounded-full text-sm font-medium"><%= @recipient.age %> years old</span>
          <span class="px-2 py-1.5 text-gray-400 font-medium">â€¢</span>
          <span class="px-4 py-1.5 bg-purple-100 text-purple-700 rounded-full text-sm font-medium"><%= @recipient.relationship %></span>
        </div>
      </div>
    </div>

    <!-- Edit and Delete Buttons -->
    <div class="grid grid-cols-2 gap-4">
      <%= link_to edit_recipient_path(@recipient), class: "flex items-center justify-center px-6 py-3 bg-purple-200 text-purple-700 rounded-xl font-medium hover:bg-purple-300 transition-colors" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Edit
      <% end %>

      <%= link_to recipient_path(@recipient), method: :delete, data: { turbo_method: :delete, confirm: "Are you sure?" }, class: "flex items-center justify-center px-6 py-3 bg-red-100 text-red-600 rounded-xl font-medium hover:bg-red-200 transition-colors" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
        Delete
      <% end %>
    </div>
  </div>

  <!-- About Section Header -->
  <div class="flex items-center mb-4">
    <svg class="w-6 h-6 text-pink-400 mr-2" fill="currentColor" viewBox="0 0 24 24">
      <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"/>
    </svg>
    <h2 class="text-xl font-semibold text-gray-700">About <%= @recipient.name %></h2>
  </div>

  <!-- Hobbies, Likes, Dislikes Cards -->
  <div class="grid grid-cols-1 md: grid-cols-3 gap-4 mb-8">
    <!-- Hobbies -->
    <div class="bg-white rounded-2xl shadow-md p-6">
      <div class="flex items-center mb-3">
        <div class="w-10 h-10 bg-pink-100 rounded-full flex items-center justify-center mr-3">
          <svg class="w-5 h-5 text-pink-500" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-700">Hobbies</h3>
      </div>
      <p class="text-gray-600"><%= @recipient.hobbies %></p>
    </div>

    <!-- Likes (using hobbies as an example, adjust if you have a likes field) -->
    <div class="bg-white rounded-2xl shadow-md p-6">
      <div class="flex items-center mb-3">
        <div class="w-10 h-10 bg-indigo-100 rounded-full flex items-center justify-center mr-3">
          <svg class="w-5 h-5 text-indigo-500" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-700">Likes</h3>
      </div>
      <p class="text-gray-600"><%= @recipient.hobbies %></p>
    </div>

    <!-- Dislikes -->
    <div class="bg-white rounded-2xl shadow-md p-6">
      <div class="flex items-center mb-3">
        <div class="w-10 h-10 bg-yellow-100 rounded-full flex items-center justify-center mr-3">
          <svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8 0-1.12. 23-2.18.65-3.15L8 12. 2V13c0 1.1. 9 2 2 2v3c-2.76 0-5-2.24-5-5v-1.17l-1.23-1.23A7.936 7.936 0 0012 4c4.41 0 8 3.59 8 8s-3.59 8-8 8z"/>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-700">Dislikes</h3>
      </div>
      <p class="text-gray-600"><%= @recipient.dislikes %></p>
    </div>
  </div>

  <!-- Gift Ideas Section -->
  <div class="flex items-center justify-between mb-6">
    <div class="flex items-center">
      <svg class="w-6 h-6 text-pink-400 mr-2" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"/>
      </svg>
      <h2 class="text-xl font-semibold text-gray-700 mr-3">Gift Ideas</h2>
      <span class="bg-pink-400 text-white text-sm font-bold rounded-full w-7 h-7 flex items-center justify-center"><%= @recipient.gift_ideas.count %></span>
    </div>

    <%= link_to new_recipient_gift_idea_path(@recipient), class: "flex items-center px-6 py-3 bg-gradient-to-r from-pink-400 to-pink-500 text-white rounded-xl font-medium hover:from-pink-500 hover:to-pink-600 transition-all shadow-md" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      Add Gift Idea
    <% end %>
  </div>

  <!-- Gift Ideas Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @recipient.gift_ideas.each do |idea| %>
      <%= render GiftIdeaCardComponent.new(gift_idea: idea, recipient: @recipient) %>
    <% end %>
  </div>

</div>

