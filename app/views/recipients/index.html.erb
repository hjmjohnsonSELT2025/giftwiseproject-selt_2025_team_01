<!-- Cute Gift Recipients Header -->
<div class="pt-8 pb-2 px-2 bg-[#fef8f9]">
  <div class="flex items-center gap-2 max-w-2xl mx-auto">
<!--    <span class="inline-flex items-center justify-center text-yellow-400 text-2xl">-->
<!--      <svg width="28" height="28" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg>-->
<!--    </span>-->
    <h1 class="text-2xl font-bold text-gray-700">Your Gift Recipients</h1>
  </div>
  <p class="text-center text-gray-400 mt-1 mb-6 max-w-2xl mx-auto">Keep track of special people and their gift preferences</p>
</div>

<!-- Add Recipient Button -->
<div class="max-w-4xl mx-auto w-full px-2 mb-8">
  <div class="rounded-2xl bg-gradient-to-r from-[#ff9b9f] to-[#fd79a8] shadow-lg flex items-center justify-end h-[64px] px-6">
    <%= link_to new_recipient_path, class: "flex items-center gap-2 text-white font-semibold text-lg px-5 py-2 rounded-xl bg-white/20 hover:bg-white/30 transition-all duration-200 shadow-none" do %>
      <span class="inline-flex items-center justify-center bg-white/30 rounded-lg p-1.5">
        <!-- Plus Icon -->
        <svg width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 5v14m7-7H5"/></svg>
      </span>
      Add Recipient
    <% end %>
  </div>
</div>

<!-- Recipients List -->
<div class="max-w-4xl mx-auto w-full px-2">
  <ul class="flex flex-col gap-6">
    <% @recipients.each_with_index do |r, i| %>
      <li>
        <%= link_to recipient_path(r), class: "flex items-center gap-5 bg-white rounded-2xl shadow-md hover:shadow-lg transition-all duration-200 px-6 py-5 border border-[#fbe4ea] group" do %>
          <span class="inline-flex items-center justify-center rounded-xl shadow-md p-4"
            style="background: <%= [
              'linear-gradient(135deg,#ffb6b9,#fd79a8)',
              'linear-gradient(135deg,#b6b9ff,#a879fd)',
              'linear-gradient(135deg,#ffe29b,#fdd579)'
            ][i % 3] %>;">
            <!-- Gift Icon -->
            <svg width="32" height="32" fill="none" viewBox="0 0 24 24" stroke="white" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="8" width="18" height="4" rx="1"></rect><path d="M12 8v13"></path><path d="M19 12v7a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2v-7"></path><path d="M7.5 8a2.5 2.5 0 0 1 0-5A4.8 8 0 0 1 12 8a4.8 8 0 0 1 4.5-5 2.5 2.5 0 0 1 0 5"></path></svg>
          </span>
          <div class="flex-1 min-w-0">
            <div class="text-xl font-semibold text-gray-700"><%= r.name %></div>
            <div class="text-gray-400 text-base">Click to view gift ideas</div>
          </div>
          <span class="ml-auto">
            <!-- Chevron Icon -->
            <svg width="28" height="28" fill="none" viewBox="0 0 24 24" stroke="#bdbdbd" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M9 6l6 6-6 6"/></svg>
          </span>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
