<h1>Your Recipients</h1>

<p>
  Logged in as <%= current_user.email %> |
  <%= link_to "View Profile", profile_path(current_user.profile) %> |
  <%= link_to "View Events", events_path %> |
  <%= link_to "Log Out", destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to log out?" } %>
</p>

<%= link_to "Add Recipient", new_recipient_path %>

<ul>
  <% @recipients.each do |r| %>
    <li>
      <%= link_to r.name, recipient_path(r) %>
    </li>
  <% end %>
</ul>
