<h1>Log In</h1>
<h1 class="text-3xl font-bold text-red-500">Hello Tailwind</h1>

<%= form_with url: login_path, method: :post, local: true do |f| %>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.submit "Log In" %>
  </div>
<% end %>

<p>
  Don't have an account? <%= link_to "Sign Up", signup_path %>
</p>

<% if flash[:alert] %>
  <p><%= flash[:alert] %></p>
<% end %>
