<h1>Log In</h1>

<%= form_with url: new_user_session_path, method: :post, local: true do |f| %>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.submit "Log In" %>
  </div>
<% end %>

<p>
  <%= link_to "Forgot your password?", new_password_reset_path %>
</p>

<p>
  Don't have an account? <%= link_to "Sign Up", signup_path %>
</p>

<% if flash[:alert] %>
  <p><%= flash[:alert] %></p>
<% end %>
