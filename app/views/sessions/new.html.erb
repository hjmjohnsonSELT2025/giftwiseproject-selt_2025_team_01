<h1>Log In</h1>

<%= form_with url: login_path, method: :post, local: true do |f| %>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.submit "Log In" %>
  </div>
<% end %>

<% if flash[:alert] %>
  <p><%= flash[:alert] %></p>
<% end %>
