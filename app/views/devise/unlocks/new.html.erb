<%= render "devise/shared/auth_card", title: "Resend Unlock Instructions" do %>
  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: "block font-medium mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= f.submit "Resend unlock instructions", class: "w-full bg-gradient-to-r from-purple-400 to-indigo-500 text-white py-3 rounded-xl font-semibold hover:shadow-lg transition" %>
    </div>
  <% end %>
<% end %>
