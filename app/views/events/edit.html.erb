<h1>Edit Events</h1>

<%= form_with model: @event, local: true do |f| %>
  <% if @event.errors.any? %>
    <div class="errors">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this recipient from being saved:</h2>
      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :date, "Date" %><br>
    <%= f.date_field :date %>
  </div>

  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.submit "Update Event" %>
  </div>
<% end %>

<%= link_to "Back to Events", events_path %>