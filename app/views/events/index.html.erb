<div class="max-w-4xl mx-auto">

  <!-- Header Section -->
  <div class="pt-8 pb-2 px-2 bg-[#fef8f9]">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-xl font-bold text-gray-700">Your Events</h1>
      <p class="text-gray-400 mt-1 mb-6 text-sm">
        Track important dates and plan your gift giving
      </p>
    </div>
  </div>

  <!-- Add Event Button -->
  <div class="flex items-center max-w-4xl mx-auto w-full px-2 mb-8">
    <%= render 'shared/action_button',
               label: 'Add Event',
               path: new_event_path,
               color_classes: 'bg-gradient-to-r from-purple-400 to-indigo-400',
               icon_svg: '<svg width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 5v14m7-7H5"/></svg>'.html_safe,
               full_width: true %>
  </div>

  <!-- Events List -->
  <ul class="space-y-4">
    <% @events.order(:date).each do |event| %>
      <li>
        <%= render EventCardComponent.new(event: event) %>
      </li>
    <% end %>
  </ul>
</div>
